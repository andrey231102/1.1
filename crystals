using System;

namespace ConsoleApp1
{
class Program
{
static void Main(string[] args)
{
int crystalValue = 10;
Console.WriteLine("How much coins do u have?");

int myGold = Convert.ToInt32(Console.ReadLine());
Console.WriteLine("How much crystals u need?");

int amountOfCrystals = Convert.ToInt32(Console.ReadLine());

int goldLeft = myGold - amountOfCrystals * crystalValue;

Console.WriteLine($"U have {amountOfCrystals} crystals and {goldLeft} gold coins in ur bag");
}
}
}
